{
  "include": ["src"],
  "compilerOptions": {
    /* Projects */
    "incremental": true,
    "target": "ES2020",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    
    /* Completeness */
    "skipLibCheck": true
  }
}
